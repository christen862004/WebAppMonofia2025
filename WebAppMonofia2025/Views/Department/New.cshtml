@model Department
@{
    ViewData["Title"] = "New";
}

<h1>New</h1>
<!--/Department/SaveNew?Name=sd&ManagerName=Ahmed-->
<form method="post" action="/Department/SaveNew">
    <div>
        <label>Name</label>
        <input type="text" class="form form-control" name="Name" id="Name" value="@Model?.Name"/>
    </div>
    <div>
        <label>Manager Name</label>
        <input type="text" class="form form-control" name="ManagerName" id="ManagerName"  value="@Model?.ManagerName"/>
    </div>
    <input type="submit" class="btn btn-success" value="Create"/>
</form>
