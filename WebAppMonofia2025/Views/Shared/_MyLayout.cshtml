<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div style="background-color:aqua;font-size:30px;height:150px">Header

        <div style="background-color:cornflowerblue;">
            @RenderSection("HeadSection")
        </div>
    </div>
    <div style="background-color:cornflowerblue;height:200px">
        @RenderBody()
        
        <!--call one time-->
    </div>
    <div style="background-color:aqua;font-size:30px;">Footer
        <div style="background-color:cornflowerblue;">
            @RenderSection("FootSection",false)
            <!--Required Section-->
        </div>

    </div>
    @RenderSection("Scripts", false)

</body>
</html>
